{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnections": "Server=.;Database=MovieReservation;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True;",
    "IdentityConnections": "Server=.;Database=MovieReservation.Identity;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True;",
    "Redis": "localhost:6379,abortConnect=false,connectTimeout=30000,defaultDatabase=0"
  },
  "Redis": {
    "Enabled": true,
    "Connection": "localhost:6379,abortConnect=false,connectTimeout=30000,defaultDatabase=0",
    "Database": 0
  },

  "Jwt": {
    "SecretKey": "YourVeryLongSecretKeyThatIsAtLeast32CharactersLongForHmacSha256!",
    "Issuer": "MovieReservation",
    "Audience": "MovieReservationUsers",
    "ExpirationMinutes": 60
  },
  "Stripe": {
    "SecretKey": "sk_test_your_stripe_secret_key_here",
    "PublishableKey": "pk_test_your_stripe_publishable_key_here"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173"
    ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS" ],
    "AllowedHeaders": [ "*" ]
  },
  "RateLimiting": {
    "Enabled": true,
    "RequestsPerMinute": 100,
    "RequestsPerHour": 1000,
    "ExcludedPaths": [
      "/api/webhook",
      "/health",
      "/alive"
    ]
  },
  "ResponseCompression": {
    "EnableForHttps": true,
    "CompressionLevel": "Optimal",
    "MimeTypes": [
      "text/plain",
      "text/css",
      "application/javascript",
      "application/json",
      "application/xml",
      "text/xml",
      "application/atom+xml",
      "image/svg+xml",
      "application/x-font-ttf",
      "font/woff2"
    ]
  },
  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SenderEmail": "noreply@mymovies.com",
    "SenderPassword": "your-password",
    "SenderName": "Movie Reservation",
    "EnableSSL": true
  }


}
